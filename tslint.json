{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "member-access": [
            true,
            "no-public"
        ],
        "member-ordering": [
            true,
            "public-before-private",
            "static-before-instance",
            "variables-before-functions"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never",
                "esSpecCompliant": true
            }
        ],
        "quotemark": [
            true,
            "single",
            "avoid-template",
            "avoid-escape"
        ],
        "variable-name": [
            true,
            "check-format",
            "allow-leading-underscore",
            "ban-keywords"
        ]
    },
    "rulesDirectory": []
}